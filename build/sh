#!/bin/bash

echo "Install required dependencies"
sudo apt-get update
sudo apt-get install iverilog
sudo apt-get install verilator
sudo apt-get install gtkwave

echo "Set executable permission on script file"
chmod +x build/sh
chmod +x ./ClockDivider.v

echo "Run, Build Application using script"
./build/sh

echo "Compile and simulate Verilog files"
iverilog -o ClockDivider.vvp ClockDivider.v tb_clock_divider.v
vvp ClockDivider.vvp

echo "Convert VCD to FST file"
vcd2fst dump.vcd dump.fst

echo "View simulation results using gtkwave"
gtkwave dump.fst &

echo "Script has finished running."
